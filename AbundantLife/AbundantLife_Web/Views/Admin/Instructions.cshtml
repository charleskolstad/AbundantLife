@model AbundantLife_Model.RecoverModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Instructions</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css" integrity="sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M" crossorigin="anonymous">
    <link href="~/Assets/CSS/login.css" rel="stylesheet" />
</head>
<body class="text-center">
    <div class="container">
        <div class="row">
            <div id="register" class="col-12">
                <h1 class="display-1"><i class="fa fa-envelope-open" aria-hidden="true"></i> We Sent You an Email</h1><hr>

                <p class="text-lead">We sent an email to @Model.Email, titled "Message from Abundant Life!" The email contains instructions for the next steps. Check your email to continue.</p>
                <p class="text-lead">If you didn't receive the email, check your spam folder or your email filters.</p>
            </div>
        </div>
    </div>
</body>
</html>
